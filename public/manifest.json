{

    "manifest_version": 2,
    "default_locale": "en",
    "name": "__MSG_extensionName__",
    "version": "1.0",
    "description": "__MSG_extensionDescription__",
    "homepage_url": "https://github.com/bluzky/ev-dict",
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png",
        "256": "icons/icon-256.png",
        "512": "icons/icon-512.png"
    },

    "permissions": [
        "menus",
        "storage",
        "unlimitedStorage",
        "clipboardRead",
        "<all_urls>"
    ],

    "background": {
        "scripts": [
            "browser-polyfill.js",
            "menus.js",
            "background.js"
        ]
    },

    "content_scripts": [
        {
        "matches": ["<all_urls>"],
        "js": [
            "browser-polyfill.js",
            "content-script.js"
        ],
        "css": ["content.css"]
    }
    ], 

    "browser_action": {
        "browser_style": false,
        "default_icon": {
            "48": "icons/icon-48.png"
        },
        "default_popup": "popup.html",
        "default_title": "__MSG_extensionName__"
    }

}
